
@{
    ViewBag.Title = "Lesson1_2";
}

<link href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<div class="container">
    <h1 class="animated bounce">Happy Birthday!</h1>

    <form role="form">
        <div class="row">
            <!--Data Entry-->
            <div class="col-sm-6">
                <div class="form-group animated bounce">
                    <label for="name">Name</label>
                    <input type="text" id="name" class="form-control" />
                </div>



                <div class="form-group">
                    <label for="name">Date</label>
                    <input type="text" id="datepicker" class="form-control" />
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <strong>Select YourFavorite Baloon</strong>
                        </h3>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" class="bx" id="rb" />red</label>
                    </div>
                    <div class="checkbox">
                        <label> <input type="checkbox" class="bx" id="gb" />blue</label>
                    </div>
                    <div class="checkbox">
                        <label> <input type="checkbox" class="bx" id="bb" />green</label>
                    </div>
                </div>
                <button type="button" class="btn btn-default">Submit</button>
            </div>

            <div class="col-sm-6">
                <img src="~/Images/red.png" alt="red" class="ball" id="rbImg" />
                <img src="~/Images/blue.png" alt="blue" class="ball" id="bbImg" />
                <img src="~/Images/blue_green.png" alt="green" class="ball" id="gbImg" />
            </div>
        </div>
    </form>

</div>


<div class="navbar-fixed-bottom">
    <span class="copy">&copy; Copyright 2018 OZ</span>
</div>


<script type="text/javascript">
    $(function () {
        $('#datepicker').datepicker();
    });

    $(function () {
        $('.ball').draggable();

    });

    $('.bx').change(function () {
        $('#' + $(this).attr('id') + 'Img').css('visibility', 'visible')
        $(this).is(':checked') ?
            $('#' + $(this).attr('id') + 'Img').removeClass().addClass('animated bounceInDown') :
            $('#' + $(this).attr('id') + 'Img').addClass('animated bounceOutUp')
    });

    $('.bx').each(function () {
        $(this).is(':checked') ?
            $('#' + $(this).attr('id') + 'Img').css('visibility', 'visible') : //true
            $('#' + $(this).attr('id') + 'Img').css('visibility', 'hidden') //false: if this will be written- baloons will be hidden and next functions below will not work
    });

    $('.bx').change(function () {
        $('#' + $(this).attr('id') + 'Img').css('visibility', 'visible')
        $(this).is(':checked') ?
            $('#' + $(this).attr('id') + 'Img').removeClass().addClass('animated bounceInDown') :
            $('#' + $(this).attr('id') + 'Img').addClass('animated bounceOutUp')
    });

</script>