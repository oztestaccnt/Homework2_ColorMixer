
@{
    ViewBag.Title = "ColorMixer";


}

<h2 style="font: bold; margin-left: 5px; color: slateblue">Color Mixer</h2>

<form role="form" style="padding-left: 10px;" method="post" action="@Url.Action("Homework2","Lessons")">
    <div class="form-group">
        <h3 style="padding-left: 5px;">Pick You First Color</h3>
        @Html.DropDownList("colorMix1", (IEnumerable<SelectListItem>)ViewBag.colorMix, " (none) ", new { id = "colorPick", @class = "form-control", @style = "margin-left: 10px" })
    </div>

    <div class="form-group">
        <h3 style="padding-left: 5px;">Pick You Second Color</h3>
        @Html.DropDownList("colorMix2", (IEnumerable<SelectListItem>)ViewBag.colorMix, " (none) ", new { id = "colorPick", @class = "form-control", @style = "margin-left: 10px" })
    </div>


    <button type="submit" class="btn btn-primary" style="margin-left: 10px; ">Submit</button>

    @* Need to write a loop to pick the color  *@
    <h3 style="padding-left: 5px; color: @ViewBag.mixedColor">
        Your Mixed Color is: @ViewBag.mixedColor

    </h3>

</form>
