@{
    ViewBag.Title = "AddNumbers";

}

<h3>num1: @ViewBag.a</h3>
<h3>num2: @ViewBag.b</h3>
@*<h3>num3: @ViewBag.c</h3>*@

<h2> Total: @ViewBag.Total</h2>


<form role="form" style="padding-left: 10px;" method="post" action="@Url.Action("AddNumber","Home")">
    <div class="form-group">
        @Html.Label("num1", "First number")
        @*<label for="num1">First number</label>    **** same as line above *@
        @Html.TextBox("num1", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("num2", "Second number")
        @* <label for="num2">Second number</label>   **** same as line above*@
        @Html.TextBox("num2", null, new { @class = "form-control" })
        @*<input type="text" class="form-control" id="num2" name="num2"> **** same as line above*@
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>
